<div class="container mt-5">
  <div class="card shadow-lg rounded">
    <div class="card-header bg-primary text-white text-center">
      <h2 class="mb-0">👤 Detalhes do Usuário</h2>
    </div>
    <div class="card-body">
      <p><strong>🆔 ID:</strong> <%= @user.id %></p>
      <p><strong>👤 Nome:</strong> <%= @user.name %></p>
      <p><strong>✉️ Email:</strong> <%= @user.email %></p>
      <p><strong>🆔 OAB:</strong> <%= @user.oab.present? ? @user.oab : "Não disponível" %></p> <!-- Exibindo OAB -->
      <p><strong>📅 Criado em:</strong> <%= @user.created_at.strftime("%d/%m/%Y") %></p>
      
      <!-- Exibir se o usuário é administrador -->
      <p><strong>👑 Administrador:</strong> <%= @user.admin? ? "Sim" : "Não" %></p>

      <div class="d-flex justify-content-center mt-4">
        <%= link_to "✏️ Editar", edit_user_path(@user), class: "btn btn-warning mx-2" %>
        <%= link_to "⬅️ Voltar", users_path, class: "btn btn-secondary mx-2" %>
        <%= link_to "🗑️ Excluir", user_path(@user), method: :delete, data: { confirm: "Tem certeza?" }, class: "btn btn-danger mx-2" %>
      </div>
    </div>
  </div>
</div>
